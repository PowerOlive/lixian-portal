extends layout
block content
  form(method='post',action='/login',role='form')
    input(type='hidden', name='_csrf', value=csrfToken)
    if !info.stats.login_process
      .form-group
        label 用户名:
        input.form-control(name='username',type='text',placeholder='用户名 / 邮箱',value=info.stats.username||'')
      .form-group
        label 密码:
        input.form-control(name='password',type='password',placeholder='密码',value=info.stats.password||'')
    else
      .form-group
        input.form-control(name='vcode',type='text',placeholder='验证码')
      .form-group
        img(src=info.stats.requireVerificationCode)
    .form-group
      button.btn.btn-primary.btn-block(type='submit') 
        |登陆
